<Window x:Class="EpubReaderDemo.Views.LibraryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EpubReader demo — Library" Height="768" Width="1024">
    <Grid Margin="4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Padding="8" Command="{Binding AddBookCommand}">Add book</Button>
        </StackPanel>
    </Grid>
</Window>
